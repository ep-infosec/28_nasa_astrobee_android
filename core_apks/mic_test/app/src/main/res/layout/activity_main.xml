<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gov.nasa.arc.irg.astrobee.mictest.MainActivity">

    <Button
        android:id="@+id/main_btn_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_play_bundle"
        android:onClick="onPlayClick"/>

    <Button
        android:id="@+id/main_btn_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn_play"
        android:text="@string/main_record"
        android:onClick="onRecordClick"/>

    <Button
        android:id="@+id/main_btn_playback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn_record"
        android:text="@string/main_playback"
        android:onClick="onPlaybackClick"/>
</RelativeLayout>
